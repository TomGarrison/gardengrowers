<div class="sun">
</div>
<div class="container-fluid text-center">
    <h1 class='demologo profile'>Garden Name</h1><br>
    <a href="/feed"><button class="hvr-grow-shadow feedBtn" type="button" name="button">Feed</button></a><br><br>
    <button class="hvr-grow-shadow" id="createPlantBtn" type="button" name="button">Add New Plant</button><br>
</div><br>
<div class="container-fluid text-center createForm hidden">
    <form class="" action="/home" method="post">
        <input type="text" name="common_name" value="" placeholder=" Common Name"><br>
        <input type="text" name="scientic_name" value="" placeholder=" Scientic Name"><br>
        <input type="text" name="description" value="" placeholder=" Description"><br>
        <input type="text" name="plant_count" value="" placeholder=" Number of plants being planted"><br>
        <input type="text" name="photo" value="" placeholder=" Add Plant Photo"><br>
        <button class="hvr-grow-shadow" id="submitCreateBtn" type="submit" name="">Submit New Plant</button>
    </form>
</div>
<div class="container-fluid" style="height: 500px;">
  <div class="container" style="height: 500px;">
    <div class="row">
        <div class="col-xs-6 numberOfPlants">
          <h4>Total # Of Plants: </h4><br>
          <h1>{{numberOfPlants}}</h1>
        </div>
        <div class="col-xs-6 myMostCommon">
          <h4>My Most Common Plants: </h4><br>
          <h1>{{mostCommonPlants}}</h1>
        </div>
    </div>
      <div class="row">
          <div class="col-xs-12">
              <canvas id="doughnutChartHome" width="400" height="150"></canvas>
          </div>
        </div>
    </div>

</div>
{{#each users}}
{{#each plants}}
{{#each user_plants}}
<div class="container text-center">
    <h1>{{garden_name}}</h1>
    <div class="row">
        <div class="col-md-6">
            <div class="card">
                <img id="plantImg" class="card-img-top" src="{{photo}}" alt="Card image cap"><br>
                <div class="card-block">
                    <h4 class="card-title">Common Name{{common_name}}</h4>
                    <p class="card-text">{{description}}</p>
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">Scientific Name: {{scientific_name}}</li>
                    <li class="list-group-item">Date Added: {{date_added}}</li>
                </ul>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card">
                <img id="plantImg" class="card-img-top" src="{{photo}}" alt="Card image cap"><br>
                <div class="card-block">
                    <h4 class="card-title">{{common_name}}</h4>
                    <p class="card-text">{{description}}</p>
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">Scientific Name: {{scientific_name}}</li>
                    <li class="list-group-item">Date Added: {{date_added}}</li>
                </ul>
            </div>
        </div>
    </div>
  </div>
{{/each}}
{{/each}}
{{/each}}
